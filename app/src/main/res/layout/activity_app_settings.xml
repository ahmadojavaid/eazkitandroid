<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/yellow"
    tools:context=".SettingActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="@dimen/alpha_value"
        android:background="@drawable/bg_dark" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height">

        <TextView
            android:id="@+id/settings_settingsLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="@dimen/navigation_bar_text_size" />

        <ImageView
            android:id="@+id/settings_ProfileSettingsLabel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/back_arrow"
            android:tint="@color/gray" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <TextView
                android:id="@+id/settings_ProfileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="Profile Settings"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/settings_grayView1"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/settings_ProfileLabel"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_EditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_grayView1"
                android:layout_marginLeft="20dp"
                android:padding="13dp"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_text_size" />

            <View
                android:id="@+id/settings_grayView2"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@id/settings_EditProfile"

                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_ChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_grayView2"
                android:layout_marginLeft="20dp"
                android:padding="13dp"
                android:text="Change Password"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_text_size" />

            <View
                android:id="@+id/settings_grayView3"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/settings_ChangePassword"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_PushNotificationsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_grayView3"
                android:layout_marginLeft="20dp"
                android:padding="13dp"
                android:text="Send Push Notifications"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_text_size" />

            <Switch
                android:id="@+id/settings_PushoNotificationsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/settings_grayView4"
                android:layout_below="@id/settings_grayView3"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:gravity="center" />

            <View
                android:id="@+id/settings_grayView4"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@id/settings_PushNotificationsLabel"

                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_SupportLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_grayView4"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="SUPPORT"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/settings_grayView5"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/settings_SupportLabel"

                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_AboutEazkit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_grayView5"
                android:layout_marginLeft="20dp"
                android:padding="13dp"
                android:text="About Eazkit"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_text_size" />

            <View
                android:id="@+id/settings_grayView6"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@id/settings_AboutEazkit"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_LeaveMessage"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_grayView6"
                android:layout_marginLeft="20dp"
                android:padding="13dp"
                android:text="Leave a Message"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_text_size" />

            <View
                android:id="@+id/settings_grayView7"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:visibility="gone"
                android:layout_below="@+id/settings_LeaveMessage"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_LeavAmazonReply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_grayView7"
                android:layout_marginLeft="20dp"
                android:padding="13dp"
                android:text="Leave an Amazon Review"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_text_size" />

            <View
                android:id="@+id/settings_grayView8"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/settings_LeavAmazonReply"

                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_CheckforUpdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_grayView8"
                android:layout_marginLeft="20dp"
                android:padding="13dp"
                android:text="Check for Updates"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_text_size" />

            <View
                android:id="@+id/lastLine"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/settings_CheckforUpdates"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/settings_EAZKIT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastLine"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="bottom|center"
                android:text="EAZKIT v1.0"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>