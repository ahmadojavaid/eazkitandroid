<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CircleButtons">

    <RelativeLayout
        android:id="@+id/shareContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/buttonContainer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/shareButtons_Twitter"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/white_circle"
                    android:padding="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons8_twitter_100" />

                <ImageView
                    android:id="@+id/shareButtons_Facebook"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/white_circle"
                    android:padding="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons8_facebook_100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonContainer1"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/shareButtons_GooglePlus"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/white_circle"
                    android:padding="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons8_google_plus_96"
                    android:tint="@color/googleplus" />

                <ImageView
                    android:id="@+id/shareButtons_Mail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/white_circle"
                    android:padding="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_instagram" />

            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/closeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/circle_white_borders"
            android:src="@drawable/ic_close_black_24dp" />

    </RelativeLayout>


</RelativeLayout>